<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Google Devs CMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   
    <nav class="navbar navbar-default navbar-inverse" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Google Devs CMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Admin", "Home", null, new { style = "color: white;" })</li>
                    <li>@Html.ActionLink("Manage Orders", "Index", "Orders", null, new { style = "color: white;" })</li>
                    <li>@Html.ActionLink("Manage Products", "Index", "Products", null, new { style = "color: white;" })</li>
                    <li>@Html.ActionLink("Manage Users", "Index", "Users", null, new { style = "color: white;" })</li>
                    <li>@Html.ActionLink("Site Configuration", "SiteConfig", "Home", null, new { style = "color: white;" })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="admin-butt">@Html.ActionLink("Exit", "Index", "Home", null, new { style = "color: white;" })</li>
                    <li>@Html.ActionLink("Sign Out", "DeleteCookie", "Login", null, new { style = "color: white;" })</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Google Devs CMS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
